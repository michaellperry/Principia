<?xml version="1.0" encoding="utf-8"?>
<Page xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:local="using:Principia" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:Views="using:Principia.Courses.Views" x:Class="Principia.MainPage" mc:Ignorable="d" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" DataContext="{Binding Main, Source={StaticResource Locator}}">
	<Page.BottomAppBar>
		<CommandBar>
			<AppBarButton Label="New Course" Icon="Add" Click="NewCourse_Click"/>
		</CommandBar>
	</Page.BottomAppBar>

	<Border Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

		<Grid>
			<Grid.RowDefinitions>
				<RowDefinition />
			</Grid.RowDefinitions>
			<Grid.ColumnDefinitions>
				<ColumnDefinition />
			</Grid.ColumnDefinitions>

			<Views:CourseListView Margin="0,140,0,0" />
			<TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="Principia" VerticalAlignment="Top" FontSize="64" Margin="120,42,0,0" />

		</Grid>
	</Border>
</Page>
